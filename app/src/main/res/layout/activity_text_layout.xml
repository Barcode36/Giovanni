<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".textlayout.TextLayoutActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/text_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/rosso_2"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <TextView
                    android:id="@+id/text_come_stai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/edit_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:hint="@string/digita_nome"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                android:autofillHints="@string/app_name" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <Button
                    android:id="@+id/button_invio_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/verde_3"
                    android:text="@string/invio"
                    android:textColor="@color/avorio" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/long_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="18sp"
            android:textColor="@color/verde_2"
            android:ellipsize="end"
            android:maxLines="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/edit_numero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:hint="@string/digita_numero"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="14sp"
                android:autofillHints="@string/app_name" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <Button
                    android:id="@+id/button_invio_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/azzurro_6"
                    android:text="@string/invio"
                    android:textColor="@color/avorio" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/azzurro_4"
            android:ellipsize="end"
            android:maxLines="2" />

        <RelativeLayout
            android:id="@+id/relative_variable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@color/azzurro_4"
            android:layout_margin="@dimen/dimen_10dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp">

            <Button
                android:id="@+id/button_set_height"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/set_height"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:background="@color/arancio">

            <LinearLayout
                android:id="@+id/linear_margin_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:background="@color/verde_3">

            <LinearLayout
                android:id="@+id/linear_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:id="@+id/homer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp">

                    <ImageView
                        android:id="@+id/homer"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_150dp"
                        android:animateLayoutChanges="true"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/homer" />

                </RelativeLayout>

                <Button
                    android:id="@+id/button_homer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setpivotx"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/homer_container"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:id="@+id/bart_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp">

                    <ImageView
                        android:id="@+id/bart"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_150dp"
                        android:animateLayoutChanges="true"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/bart" />

                </RelativeLayout>

                <Button
                    android:id="@+id/button_bart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startanimation"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/bart_container"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/size_density_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/density_size_text"
            android:textAlignment="center"
            android:textColor="@color/verde_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/html_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/verde_2"
            android:textSize="14sp"
            tools:text="HTML rendering 1" />

        <TextView
            android:id="@+id/html_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:textAlignment="center"
            android:textColor="@color/verde_2"
            android:textSize="14sp"
            tools:text="HTML rendering 2" />

    </LinearLayout>

</ScrollView>