<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_30dp"
    android:background="@color/lightGrey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textParziale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:background="@color/carta_da_zucchero"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textFinale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/carta_da_zucchero"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_weight="0.7"
            android:background="@color/avorio" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:text="@string/memory"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blu_ceruleo" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_weight="0.3"
            android:background="@color/avorio" >

            <TextView
                android:id="@+id/textMemory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/blu_ceruleo"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="C"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonMC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="MC"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="MS"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonMR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="MR"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="3"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonPiu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="+"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="4"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="5"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="6"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonMeno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="-"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="7"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="8"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="9"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonPer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="*"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPunto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="."
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonUguale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="="
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonDiviso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_1dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="/"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>