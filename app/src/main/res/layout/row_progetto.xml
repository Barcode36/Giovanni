<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp"
    app:cardBackgroundColor="@color/verde_2"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_0dp"
    android:layout_margin="@dimen/dimen_1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/avorio"
        android:layout_margin="@dimen/dimen_5dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/textID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textColor="@color/arancio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45">

            <TextView
                android:id="@+id/textProgetto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:text="@string/progetto"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45">

            <TextView
                android:id="@+id/textVario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vario"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>