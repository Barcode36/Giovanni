<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".setlayout.SetLayoutActivity">

    <RelativeLayout
        android:id="@+id/relative_variable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/azzurro"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp">

        <Button
            android:id="@+id/button_set_height"
            style="@style/MenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_height"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@color/orange">

        <LinearLayout
            android:id="@+id/linear_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@color/giada">

        <LinearLayout
            android:id="@+id/linear_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <RelativeLayout
                android:id="@+id/homer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/homer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_150dp"
                    app:srcCompat="@drawable/homer"
                    android:animateLayoutChanges="true"/>

            </RelativeLayout>

            <Button
                android:id="@+id/button_homer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setpivotx"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/homer_container"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <RelativeLayout
                android:id="@+id/bart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/bart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_150dp"
                    app:srcCompat="@drawable/bart"
                    android:animateLayoutChanges="true"/>

            </RelativeLayout>

            <Button
                android:id="@+id/button_bart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startanimation"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/bart_container"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>