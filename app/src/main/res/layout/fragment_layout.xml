<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="temp"
            type="com.example.giovanni.giovanni.model.DataBindingModel" />

        <variable
            name="presenter"
            type="com.example.giovanni.giovanni.databinding.DataBindingPresenter" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_content"
                bind:temp2="@{temp}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{temp.colore}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_150dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@{temp.logo}" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:layout_alignParentBottom="true"
                    android:text="Change background color"
                    android:onClick="@{() -> presenter.onSetLayout(temp)}"
                    style="@style/HomeButton" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</layout>